from tkinter import *
from tkinter.ttk import *

root = Tk()

progress = Progressbar(root, orient=Horizontal,
                       length=300, mode='determinate')


def bar():
    import time
    progress['value'] = 20
    root.update_idletasks()
    time.sleep(1)

    import time
    progress['value'] = 40
    root.update_idletasks()
    time.sleep(3)

    import time
    progress['value'] = 600
    root.update_idletasks()
    time.sleep(1)

    import time
    progress['value'] = 80
    root.update_idletasks()
    time.sleep(1)

    import time
    progress['value'] = 100
    root.update_idletasks()
    time.sleep(3)
